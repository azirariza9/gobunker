{
  "compilerOptions": {
    // basic or some shit
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    // strictness or some shit
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    // transpiling to js or some shit
    "module": "NodeNext",
    "outDir": "dist",
    //because im running on a dom or some shit
    "lib": ["es2022", "dom", "dom.iterable"]
  }
}